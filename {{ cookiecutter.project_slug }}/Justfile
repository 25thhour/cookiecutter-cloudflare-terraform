@_default:
    just --list

# format the Justfile
@fmt:
    just --fmt --unstable

# create terraform.tfvars
@init:
    echo "ðŸ“ Creating terraform/terraform.tfvars"
    cd terraform && cp terraform.tfvars.example terraform.tfvars
    echo "ðŸ’¡ Remember to update any placeholder values"

{%- if cookiecutter.password_manager == "1Password" -%}
# set env vars from 1Password
@dotenv-inject:
    echo "ðŸ’‰ Injecting secrets into .env"
    op inject -i .env.example -o .env > /dev/null
    echo "âœ¨ .env written successfully"
    echo "ðŸ’¡ Done. Remember to source .env"
{%- else -%}
# copy .env.example to .env
@dotenv:
    echo "ðŸ’‰ Copying .env.example to .env"
    cp .env.example .env
    echo "âœ¨ .env written successfully"
    echo "ðŸ’¡ Done. Remember to update and source .env"
{% endif %}

# remove secrets
cleanup:
    echo "Removing .env file"
    rm .env
    echo "Removing terraform.tfvars file"
    cd terraform && rm terraform.tfvars

#-----------------------------------------------------------
# Terraform
#-----------------------------------------------------------

tf-init *args:
    terraform -chdir=terraform init {{ "{{ args }}" }}

tf-plan:
    terraform -chdir=terraform plan

tf-apply *args:
    terraform -chdir=terraform apply {{ "{{ args }}" }}

# output a single resource
tf-output resource:
    terraform -chdir=terraform output -json {{ "{{ resource }}" }}

# outputs all resources
tf-outputs:
    terraform -chdir=terraform output -json

# ðŸ”¥ danger
tf-destroy:
    terraform -chdir=terraform destroy
